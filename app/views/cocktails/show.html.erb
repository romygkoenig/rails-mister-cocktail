
<div class="container">
  <h1 class="cocktail-name"><%= @cocktail.name %></h1>

  <div class="card"
  style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
         url('<%= cl_image_path @cocktail.photo, height: 300, width: 400, crop: :fill %>')">


      <button type="button" class="btn btn-outline-secondary"><%= link_to "Add dose", new_cocktail_dose_path(@cocktail) %></button>
    </p>

  <div class="container perspective">
    <div class="row">
      <% @cocktail.doses.each do |dose| %>
      <div class="father col-xs-6 col-sm-6">
        <div class="front ">
            <%=dose.ingredient.name %>
            <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
              <i class="fas fa-trash-alt"></i>
            <% end  %>
        </div>
        <div class="back">
            <%= dose.description %>
        </div>

      </div>
      <% end %>

    </div>
  </div>
</div>

