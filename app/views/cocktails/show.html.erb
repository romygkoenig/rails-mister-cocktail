
<div class="container new-dose">
  <h1 class="cocktail-name"><%= @cocktail.name %></h1>
    <p>

      <button type="button" class="btn btn-outline-light"><%= link_to "Add dose", new_cocktail_dose_path(@cocktail) %></button>

    </p>

  <div class="container perspective">
    <div class="row">
      <% @cocktail.doses.each do |dose| %>
      <div class="father col-xs-6 col-sm-4">
        <div class="front ">
            <%=dose.ingredient.name %>
            <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
              <i class="fas fa-trash-alt"></i>
            <% end  %>
        </div>
        <div class="back">
            <%= dose.description %>
        </div>

      </div>
      <% end %>

    </div>
  </div>
</div>

